  "workflows": {
    "pre-release": {
      "name": "Pre-Release QA",
      "description": "Full review before public release",
      "reviewTypes": ["art", "audio", "narrative", "puzzle", "ux", "balance"],
      "required": true
    },
    "art-pass": {
      "name": "Art Pass",
      "description": "Visual asset review only",
      "reviewTypes": ["art"],
      "required": false
    },
    "audio-pass": {
      "name": "Audio Pass",
      "description": "Audio asset review only",
      "reviewTypes": ["audio"],
      "required": false
    },
    "content-review": {
      "name": "Content Review",
      "description": "Narrative and puzzle review",
      "reviewTypes": ["narrative", "puzzle", "lore"],
      "required": false
    },
    "playtest": {
      "name": "Playtest",
      "description": "Full gameplay experience review",
      "reviewTypes": ["ux", "balance", "puzzle"],
      "required": false
    }
  }
