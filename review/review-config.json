{
  "meta": {
    "title": "Cipher Circle QA Portal",
    "version": "1.0",
    "github": {
      "owner": "TheCipherCircle",
      "repo": "SpellEngine"
    }
  },
  "reviewTypes": {
    "art": {
      "name": "Art Review",
      "agent": "Fraz",
      "glyph": "◈",
      "color": "#d3869b",
      "labels": ["art-review", "fraz-queue"],
      "template": "art-review",
      "description": "Visual assets - sprites, backgrounds, UI elements",
      "automatedChecks": ["dimensions", "format", "filesize"],
      "humanChecks": ["style consistency", "appeal", "color palette", "readability"]
    },
    "audio": {
      "name": "Audio Review",
      "agent": "Echo",
      "glyph": "♪",
      "color": "#83a598",
      "labels": ["audio-review", "echo-queue"],
      "template": "audio-review",
      "description": "Music, sound effects, ambience",
      "automatedChecks": ["format", "duration", "samplerate", "clipping"],
      "humanChecks": ["mood", "quality", "mixing", "looping", "emotional fit"]
    },
    "narrative": {
      "name": "Narrative Review",
      "agent": "Mirth",
      "glyph": "≋",
      "color": "#b8bb26",
      "labels": ["narrative-review", "mirth-queue"],
      "template": "narrative-review",
      "description": "Story, dialogue, lore text",
      "automatedChecks": ["spelling", "length", "formatting"],
      "humanChecks": ["tone", "character voice", "flow", "emotional impact", "immersion"]
    },
    "puzzle": {
      "name": "Puzzle Review",
      "agent": "Vex",
      "glyph": "⌘",
      "color": "#fabd2f",
      "labels": ["puzzle-review", "vex-queue"],
      "template": "puzzle-review",
      "description": "Ciphers, challenges, difficulty",
      "automatedChecks": ["solvability", "solution-exists"],
      "humanChecks": ["difficulty feel", "hint quality", "fun factor", "fairness"]
    },
    "ux": {
      "name": "UX Review",
      "agent": "Prism",
      "glyph": "◐",
      "color": "#8ec07c",
      "labels": ["ux-review", "prism-queue"],
      "template": "ux-review",
      "description": "User experience, flow, accessibility",
      "automatedChecks": ["click-paths", "load-times", "contrast"],
      "humanChecks": ["intuitive", "confusing points", "accessibility", "satisfaction"]
    },
    "balance": {
      "name": "Balance Review",
      "agent": "Jinx",
      "glyph": "☆",
      "color": "#fe8019",
      "labels": ["balance-review", "jinx-queue"],
      "template": null,
      "description": "XP curves, difficulty progression, pacing",
      "automatedChecks": ["xp-math", "progression-curves"],
      "humanChecks": ["feel", "pacing", "fairness", "reward satisfaction"]
    },
    "lore": {
      "name": "Lore Review",
      "agent": "Loreth",
      "glyph": "◇",
      "color": "#d65d0e",
      "labels": ["lore-review", "loreth-queue"],
      "template": null,
      "description": "Canon consistency, world-building",
      "automatedChecks": ["name-references", "timeline-check"],
      "humanChecks": ["consistency", "contradictions", "gaps", "depth"]
    }
  },
